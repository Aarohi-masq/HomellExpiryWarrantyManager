<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightbg"
    android:visibility="visible"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.homell.Homell.realtime">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"

            android:background="@drawable/loadroundbg"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/addback"
                android:padding="4dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="31dp"
                android:src="@drawable/backbtn">

            </ImageView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/metromed"
                    android:text="Add Product"
                    android:textColor="@color/darkgreen"
                    android:textSize="18dp"></TextView>

            </RelativeLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:layout_centerHorizontal="true"

                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:paddingTop="20dp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="8dp"
                            >



                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/addexpname"
                                android:src="@drawable/grpaddtext1"></ImageView>


                            <EditText
                                android:id="@+id/productname"
                                android:layout_width="240dp"
                                android:layout_height="28dp"
                                android:layout_alignRight="@+id/addexpname"
                                android:layout_alignLeft="@id/addexpname"
                                android:layout_alignBottom="@+id/addexpname"
                                android:layout_marginBottom="24dp"
                                android:layout_marginLeft="22dp"
                                android:layout_marginRight="25dp"
                                android:background="@color/lightbg"
                                android:ems="10"
                                android:autofillHints="......."
                                android:importantForAutofill="noExcludeDescendants"
                                android:fontFamily="@font/metroregular"
                                android:hint="Product Name"
                                android:inputType="textCapWords"
                                android:textColor="@color/darkgreen"

                                android:textSize="18dp" />



                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"

                            android:paddingTop="10dp">


                            <ImageView
                                android:id="@+id/expcategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/expcategory"></ImageView>

                            <TextView
                                android:id="@+id/categ"
                                android:layout_width="240dp"
                                android:layout_height="28dp"
                                android:layout_alignLeft="@id/expcategory"
                                android:layout_alignRight="@+id/expcategory"
                                android:layout_alignBottom="@+id/expcategory"
                                android:layout_marginLeft="22dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginBottom="21dp"
                                android:background="@color/lightbg"
                                android:ems="10"
                                android:fontFamily="@font/metroregular"
                                android:hint="Enter Category"
                                android:inputType="textPersonName"
                                android:textColor="@color/darkgreen"

                                android:textSize="18dp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="7dp"
                            >


                            <Button

                                android:id="@+id/foodexpbtn"
                                android:layout_width="67dp"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="14dp"
                                android:background="@drawable/foodcategory"
                                ></Button>

                            <Button
                                android:id="@+id/medexpbtn"
                                android:layout_width="94dp"
                                android:layout_height="30dp"
                                android:layout_alignLeft="@+id/foodexpbtn"
                                android:layout_marginLeft="90dp"
                                android:background="@drawable/medicinecategory">

                            </Button>

                            <Button

                                android:id="@+id/othersexpbtn"
                                android:layout_width="72dp"
                                android:layout_height="30dp"
                                android:layout_alignLeft="@+id/medexpbtn"
                                android:layout_marginLeft="114dp"

                                android:background="@drawable/otherscategory"></Button>
                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"

                            android:paddingTop="10dp">


                            <ImageView
                                android:id="@+id/expdateadd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/expdateadd"></ImageView>


                            <TextView
                                android:id="@+id/mfgdate"
                                android:layout_width="240dp"
                                android:layout_height="28dp"
                                android:layout_alignLeft="@id/expdateadd"
                                android:layout_alignRight="@+id/expdateadd"
                                android:layout_alignBottom="@+id/expdateadd"
                                android:layout_marginLeft="22dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginBottom="22dp"
                                android:background="@color/lightbg"
                                android:ems="10"
                                android:fontFamily="@font/metroregular"
                                android:hint="Select Date"
                                android:inputType="textPersonName"
                                android:textColor="@color/darkgreen"

                                android:textSize="18dp" />

                            <ImageView
                                android:id="@+id/expdatedrop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/calicon"
                                android:layout_alignRight="@+id/mfgdate"
                                android:layout_marginRight="17dp"
                                android:layout_alignBottom="@+id/mfgdate"
                                android:layout_marginBottom="6dp"
                                >

                            </ImageView>





                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <DatePicker
                                android:id="@+id/pickerdate"
                                android:layout_width="360dp"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"

                                ></DatePicker>
                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></RelativeLayout>



                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"

                            android:paddingTop="10dp">


                            <ImageView
                                android:id="@+id/expclocktime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/expnotificationtimeadd"></ImageView>


                            <TextView
                                android:id="@+id/expirytime"
                                android:layout_width="240dp"
                                android:layout_height="28dp"
                                android:layout_alignLeft="@id/expclocktime"
                                android:layout_alignRight="@+id/expclocktime"
                                android:layout_alignBottom="@+id/expclocktime"
                                android:layout_marginLeft="22dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginBottom="22dp"
                                android:background="@color/lightbg"
                                android:ems="10"
                                android:fontFamily="@font/metroregular"
                                android:hint="Select Time"
                                android:inputType="textPersonName"
                                android:textColor="@color/darkgreen"

                                android:textSize="18dp" />

                            <ImageView
                                android:id="@+id/exptimedrop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/dropdownbtn"
                                android:layout_alignRight="@+id/expirytime"
                                android:layout_marginRight="17dp"
                                android:layout_alignBottom="@+id/expirytime"
                                android:layout_marginBottom="6dp"
                                ></ImageView>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"

                            >

                            <TimePicker
                                android:id="@+id/pickertime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:timePickerMode="spinner"
                                android:visibility="gone">
                            </TimePicker>

                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"

                            android:paddingTop="10dp">


                            <ImageView
                                android:id="@+id/expadddisc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/expdescritionadd"></ImageView>


                            <EditText
                                android:id="@+id/desc"
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"

                                android:inputType="textMultiLine"
                                android:lines="8"
                                android:minLines="6"
                                android:gravity="top|left"
                                android:maxLines="10"
                                android:scrollbars="vertical"
                                android:layout_alignLeft="@id/expadddisc"
                                android:layout_alignRight="@+id/expadddisc"
                                android:layout_alignTop="@+id/expadddisc"
                                android:layout_marginLeft="22dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="40dp"
                                android:background="@color/lightbg"
                                android:ems="10"
                                android:textDirection="ltr"
                                android:fontFamily="@font/metroregular"
                                android:hint="write anything you want
to remember about this
product."
                                android:textColor="@color/darkgreen"

                                android:textSize="18dp" />


                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>







                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp">

                    <Button
                        android:id="@+id/subbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/addbigbtn"
                        android:fontFamily="@font/metrosemi"

                        android:layout_centerInParent="true"
                        android:textAllCaps="false"
                        android:textColor="@color/creame" />
                </RelativeLayout>






            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.gms.ads.AdView

            xmlns:ads = "http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize = "BANNER"
            ads:adUnitId= "ca-app-pub-6230162403473872/7671601807">

        </com.google.android.gms.ads.AdView>



    </RelativeLayout>



</RelativeLayout>