<?xml version="1.0" encoding="utf-8"?>




<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    tools:context="com.homell.Homell.register">
    <RelativeLayout android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:id="@+id/verifyemail">
        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView

                    android:layout_centerHorizontal="true"
                    android:layout_width="352dp"
                    android:layout_height="308dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/verifyemail"></com.airbnb.lottie.LottieAnimationView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify Your Email"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/metrosemi"
                    android:textSize="24dp"></TextView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textAlignment="center"
                    android:textColor="@color/darkgreen"
                    android:fontFamily="@font/metroregular"

                    android:text="We just sent you an email with a verification link. Open that link to verify your email."
                    ></TextView>

            </RelativeLayout>








        </LinearLayout>

    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/form">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="402dp"
                android:layout_height="226dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/createele">
            </ImageView>
        </RelativeLayout>

        <ScrollView
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:fontFamily="@font/cormorantbold"
                        android:text="Create Account"
                        android:textColor="@color/darkgreen"
                        android:textSize="42dp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="22dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/namefield"
                            tools:ignore="MissingConstraints"></ImageView>

                        <EditText
                            android:id="@+id/namesignup"
                            android:layout_width="227dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="25dp"
                            android:autofillHints="........."

                            android:background="@null"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                            android:ems="10"
                            android:fontFamily="@font/metromed"
                            android:hint="First Name"
                            android:inputType="textCapWords"
                            android:textSize="19dp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                            app:layout_constraintEnd_toEndOf="@+id/imageView6"
                            app:layout_constraintStart_toStartOf="@+id/imageView6"
                            app:layout_constraintTop_toTopOf="@+id/imageView6"
                            tools:ignore="MissingConstraints" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/emailfield1"
                            tools:ignore="MissingConstraints">

                        </ImageView>

                        <EditText
                            android:id="@+id/emreg"
                            android:layout_width="227dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="25dp"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="@font/metromed"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/black"
                            android:textSize="19dp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                            app:layout_constraintEnd_toEndOf="@+id/imageView7"
                            app:layout_constraintStart_toStartOf="@+id/imageView7"
                            app:layout_constraintTop_toTopOf="@+id/imageView7" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/passfield"
                            tools:ignore="MissingConstraints">

                        </ImageView>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/showtogg"
                            android:layout_width="227dp"
                            android:layout_height="49dp"
                            android:layout_marginStart="25dp"

                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/imageView8"
                            app:layout_constraintTop_toTopOf="@+id/imageView8"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/colorAccent"
                            tools:ignore="MissingConstraints">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/passreg"
                                android:layout_width="227dp"
                                android:layout_height="49dp"
                                android:background="@null"
                                android:fontFamily="@font/metromed"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:textSize="19dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnreg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/signupbtn"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metromed"
                        android:text="Already A Member?"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/sigintxt"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:clickable="true"
                        android:fontFamily="@font/metrosemi"
                        android:letterSpacing="0.05"
                        android:text="Sign In"
                        android:textColor="@color/darkgreen"
                        android:textSize="14dp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout> </ScrollView>





    </LinearLayout>
</RelativeLayout>



</RelativeLayout>