<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbg"
    tools:context="com.homell.Homell.SplashScreen">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/splashicon"
            android:layout_width="98dp"
            android:layout_height="115dp"
            android:layout_centerInParent="true"
            android:elevation="1dp"
            app:srcCompat="@drawable/pinkforeicon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bcheck"
android:layout_marginBottom="17dp"    android:layout_centerVertical="true" android:layout_centerHorizontal="true" />
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>